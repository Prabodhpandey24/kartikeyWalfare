<section class="py-5 mx-4">
  <div class="sliderHeading  d-flex justify-content-center sliderHeadingForOthers">
    <h4 class="sliderHeadingText">Apply Membership</h4>
  </div>
  <div class="container formContainer">
    <form action="/member-Apply-Form-Submitted" method="post" enctype="multipart/form-data">
      <div id="loaderDiv">
        <div id="loader"></div>
      </div>
      <div class="row">
        <div class="col-md-6 formContainerFor">
          <label for="Name" class="formlabel">Full Name <sup class="sup">*</sup> :</label>
          <input type="text" id="fname" name="FullName">
        </div>
        <div class="col-md-6 formContainerFor ">
          <label for="cars">Gender <sup class="sup">*</sup> :</label>
          <select id="cars formContainerFor" name="Gender">
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Other">Other</option>
          </select>
        </div>
        <div class="borderBottomForForm my-4"></div>
        <div class="col-md-6 formContainerFor">
          <label for="State" class="formlabel">State<sup class="sup">*</sup> :</label>
          <input type="text" id="mobNum" name="State">
        </div>
        <div class="col-md-6 formContainerFor">
          <label for="District" class="formlabel">District <sup class="sup">*</sup> :</label>
          <input type="text" id="city" name="District">
        </div>
        <div class="borderBottomForForm my-4"></div>
        <div class="col-md-6 formContainerFor">
          <label for="City" class="formlabel">City <sup class="sup">*</sup> :</label>
          <input type="text" id="city" name="City">
        </div>
        <div class="col-md-6 formContainerFor ">
          <label for="Mobile Number" class="formlabel">Mobile Number <sup class="sup">*</sup> :</label>
          <input type="text" id="mobNum" name="MobileNumber">
        </div>
        <div class="borderBottomForForm my-4"></div>
        <div class="col-md-6 formContainerFor">
          <label for="City" class="formlabel">Email <sup class="sup">*</sup> :</label>
          <input type="email" id="city" name="Email">
        </div>
        <div class="borderBottomForForm my-4"></div>
        <div class="col-md-6 formContainerFor">
          <label for="cars">Payment Mode<sup class="sup">*</sup> :</label>
          <select id="cars formContainerFor" name="UpiMethod">
            <option value="Bank Transfer Slip">Bank Transfer Slip</option>
            <option value="Google Pay">Google Pay</option>
            <option value="Phonepe">Phonepe</option>
            <option value="Amazon Pay">Amazon Pay</option>
            <option value="Paytm">Paytm</option>
            <option value="Other">Other</option>
          </select>
        </div>
        <div class="col-md-6 formContainerFor ">
          <label for="City" class="formlabel">UPI SCAN:<sup class="sup">*</sup> :</label>
          <img src="/static/img/donate.jpg" alt="" class="payImg">
        </div>
        <div class="borderBottomForForm my-4"></div>
        <div class="col-md-6 formContainerFor">
          <label for="City" class="formlabel">Payment Reciept Upload<sup class="sup">*</sup> :</label>
          <input type="file" id="myFile" name="file_upi" class="">
        </div>
      </div>


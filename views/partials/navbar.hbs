<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

<nav class="fixedNav" style="position: relative">
  <div class="container-fluid bgNav border-bottom">
    <div class="container">
      <div class="row">
        <div class="col-sm-4 col-6">
          <a class="navbar-brand" href="#">
            <img
              src="static/img/kartikeyLogo.png"
              alt=""
              height="80"
              width="90"
            /></a>
        </div>
        <div class="col-sm-4 justify-content-center d-flex align-items-center logoTextContainer">
          <a href="" class="logoText">Kartikey Welfare Trust</a>
        </div>
        <div class="col-sm-4 justify-content-end d-flex align-items-center col-6">
          <span id="bars" class="d-none">
            <i class="fas fa-bars text-light fa-2x"></i>
          </span>

        </div>
      </div>
    </div>
  </div>
  <div class="container-fluid" style="border-bottom: 2px solid #2f874a; background-color: white;">
    <div class="container">
      <div class="row">
        <nav
          class="navbar navbar-expand-lg navbar-light justify-content-center py-0"
        >
          <div class="x">
            <div class="" id="navbarNavDropdown">
              <ul class="navbar-nav" id="mySidenav">
                <li class="nav-item align-items-center d-flex">
                  <i class="fas fa-home"></i>
                </li>
                {{#each navbarData}}
                  <li class="nav-item">
                    <a
                      class="nav-link nav-link-custom"
                      href={{this.linkUrl}}
                    >{{this.linkName}}</a>
                  </li>
                {{/each}}
              </ul>
            </div>
          </div>
        </nav>
		<nav class="mobileView" id="mobileView">
				<div class="insideMobileView">
					<ul class="p-0">
					{{#each navbarData}}
						<li class="d-flex justify-content-start py-1 mobileLinks">
						<a
							class="nav-link nav-link-custom"
							href={{this.linkUrl}}
							>{{this.linkName}}</a>
						</li>
					{{/each}}
					</ul>
				</div>
        </nav>
      </div>
    </div>
  </div>
</nav>

<script>
 $(document).ready(function(){
  $("#bars").click(function(){
    $("#mobileView").toggle('slow');
  });
});
</script>

